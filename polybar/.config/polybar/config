[module/mail]
type = custom/script
exec = printf "ÓÜ® %s" "$(find ~/mail/*/INBOX -type d -name "new" -exec ls {} \; -quit | wc -l)"
exec-if = [ $(find ~/mail/*/INBOX -type d -name "new" -exec ls {} \; -quit | wc -l) -gt 0 ]
interval = 5

format-underline = #fff

[module/temperature]
