[module/pulseaudio]
type = internal/pulseaudio

sink = [ $(pactl list sinks | sed -n '/RUNNING/{:start /alsa_output/!{N;b start};//p}' | sed -n 's/.*\(alsa_output.*$\).*/\1/p') ]

; Use PA_VOLUME_UI_MAX (~153%) if true, or PA_VOLUME_NORM (100%) if false
; Default: true
use-ui-max = false

interval = 5

; Available tags:
;   <label-volume> (default)
;   <ramp-volume>
;   <bar-volume>
format-volume = ÓÅù <label-volume>
format-volume-underline = #c3fec5
; Available tags:
;   <label-muted> (default)
;   <ramp-volume>
;   <bar-volume>
format-muted = <label-muted> muted
format-muted-underline = #666

; Available tokens:
;   %percentage% (default)
;   %decibels% (unreleased)
;label-volume = %percentage%%

; Available tokens:
;   %percentage% (default)
;   %decibels% (unreleased)
label-muted = ÓÅè
label-muted-foreground = #666

; Only applies if <ramp-volume> is used
; ramp-volume-0 = üîà
; ramp-volume-1 = üîâ
; ramp-volume-2 =e üîä

; Right and Middle click (unreleased)
; click-right =
